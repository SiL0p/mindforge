{% extends 'guardian/base.html.twig' %}

{% block title %}{{ room.name }}{% endblock %}

{% block guardian_content %}
<div class="row">
    <div class="col-md-8">
        <h1>{{ room.name }}</h1>
        <p class="text-muted">Created by <strong>{{ room.creator.email }}</strong></p>

        {% if room.description %}
            <div class="alert alert-info">
                <strong>Room Description:</strong><br>
                {{ room.description }}
            </div>
        {% endif %}

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üìù Chat & Discussion</h5>
            </div>
            <div class="card-body" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                {% if messages is empty %}
                    <p class="text-muted text-center mt-5">No messages yet. Start the conversation!</p>
                {% else %}
                    <div>
                        <!-- Messages would go here -->
                        <p class="text-muted">Chat feature coming soon...</p>
                    </div>
                {% endif %}
            </div>
            <div class="card-footer">
                <form class="input-group">
                    <input type="text" class="form-control" placeholder="Type a message..." disabled>
                    <button class="btn btn-primary" type="button" disabled>Send</button>
                </form>
                <small class="text-muted d-block mt-2">üí¨ Chat feature coming soon</small>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Sidebar -->
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">üìä Room Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Status:</strong> 
                    {% if room.isActive %}
                        <span class="badge bg-success">Active</span>
                    {% else %}
                        <span class="badge bg-secondary">Inactive</span>
                    {% endif %}
                </p>
                <p><strong>Participants:</strong> {{ room.participants|length }}/{{ room.maxParticipants }}</p>
                <p><strong>Created:</strong> {{ room.createdAt|date('d/m/Y H:i') }}</p>
            </div>
        </div>

        <!-- Participants -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">üë• Participants ({{ room.participants|length }})</h5>
            </div>
            <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                {% if room.participants is empty %}
                    <p class="text-muted">No participants yet</p>
                {% else %}
                    <ul class="list-group list-group-flush">
                        {% for participant in room.participants %}
                            <li class="list-group-item py-2">
                                <small>{{ participant.email }}</small>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-3">
            {% if is_participant %}
                <form method="POST" action="{{ path('guardian_room_leave', {id: room.id}) }}">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="fas fa-door-open"></i> Leave Room
                    </button>
                </form>
            {% else %}
                {% if room.isFull() %}
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="fas fa-users"></i> Room Full
                    </button>
                {% else %}
                    <form method="POST" action="{{ path('guardian_room_join', {id: room.id}) }}">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus-circle"></i> Join Room
                        </button>
                    </form>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
