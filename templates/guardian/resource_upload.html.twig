{% extends 'guardian/base.html.twig' %}

{% block title %}Upload Resource{% endblock %}

{% block guardian_content %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>ðŸ“¤ Upload a Resource</h1>
        <p class="text-muted">Share your knowledge with other students</p>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter resource title'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Describe what this resource contains...'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.file) }}
                    {{ form_widget(form.file, {'attr': {'class': 'form-control', 'accept': '.pdf'}}) }}
                    {{ form_errors(form.file) }}
                    <small class="text-muted">Maximum file size: 10MB</small>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-upload"></i> Upload Resource
                </button>
                <a href="{{ path('guardian_library') }}" class="btn btn-outline-secondary">Cancel</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
