{% extends 'workspace/module_base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block module_title %}New Task{% endblock %}
{% block module_subtitle %}Create a new planner task.{% endblock %}
{% block module_content %}
<div class="container-fluid" style="margin-top: 20px; margin-bottom: 30px;">
    <div class="row">
        {% include 'components/_sidebar_planner.html.twig' %}

        <main class="col-md-9 col-lg-10">
            <div class="page-header d-flex flex-wrap align-items-center justify-content-between" style="margin-bottom: 20px;">
                <div>
                    <h1 style="margin-bottom: 8px;">Create Task</h1>
                    <p class="text-muted" style="margin: 0;">Difficulty will be auto-tagged based on task keywords.</p>
                </div>
                <a href="{{ path('app_planner_tasks') }}" class="btn btn-default">Back to board</a>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div style="margin-top: 16px; display:flex; gap:8px;">
                            <button type="submit" class="btn btn-primary">Save task</button>
                            <a href="{{ path('app_planner_tasks') }}" class="btn btn-default">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
