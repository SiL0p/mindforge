{% extends 'workspace/module_base.html.twig' %}

{% block title %}Add Exam{% endblock %}

{% block module_title %}New Exam{% endblock %}
{% block module_subtitle %}Add a new exam to your planner.{% endblock %}
{% block module_content %}
<div class="container-fluid" style="margin-top: 20px;">
    <div class="row">
        {% include 'components/_sidebar_planner.html.twig' %}

        <main class="col-md-9 col-lg-10">
            <div class="page-header d-flex flex-wrap align-items-center justify-content-between">
                <div>
                    <h1>Add Exam</h1>
                    <p class="text-muted">Schedule a new exam.</p>
                </div>
                <a href="{{ path('app_planner_exams') }}" class="btn btn-default">Back to exams</a>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="d-flex gap-2" style="margin-top: 16px;">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="{{ path('app_planner_exams') }}" class="btn btn-default">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
