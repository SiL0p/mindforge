{% extends 'workspace/module_base.html.twig' %}

{% block title %}My Support Tickets{% endblock %}

{% block module_title %}My Tickets{% endblock %}
{% block module_subtitle %}View and follow your support tickets.{% endblock %}
{% block module_content %}
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h2><i class="fa fa-ticket"></i> My Support Tickets</h2>
                </div>

                <div class="panel panel-default">
                    <div class="panel-body table-responsive">
                        {% if claims is empty %}
                            <p class="text-muted">You have not created any tickets yet.</p>
                        {% else %}
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Created</th>
                                        <th>Updated</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for claim in claims %}
                                        <tr>
                                            <td>#{{ claim.id }}</td>
                                            <td>{{ claim.title }}</td>
                                            <td>{{ claim.status|replace({'_': ' '})|title }}</td>
                                            <td>{{ claim.priority|title }}</td>
                                            <td>{{ claim.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>{{ claim.updatedAt ? claim.updatedAt|date('d/m/Y H:i') : '-' }}</td>
                                            <td>
                                                <a href="{{ path('community_claim_view', {id: claim.id}) }}" class="btn btn-xs btn-primary">View</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>

                <a href="{{ path('community_claim_create') }}" class="btn btn-primary">Create Ticket</a>
                <a href="{{ path('community_index') }}" class="btn btn-default">Back to Community</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
