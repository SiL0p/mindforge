{# templates/community/rooms_list.html.twig #}
{% extends "base.html.twig" %}

{% block title %}Virtual Rooms | MindForge Community{% endblock %}

{% block body %}
<div class="rooms-list-container">
    <div class="rooms-header">
        <h1>Virtual Study Rooms</h1>
        <p>Join a room to chat with classmates in real-time</p>
        <a href="{{ path('community_index') }}" class="btn btn-secondary">‚Üê Back to Hub</a>
    </div>

    {% if rooms %}
        <div class="rooms-grid">
            {% for room in rooms %}
                <div class="room-card">
                    <div class="room-icon">üìö</div>
                    <h3>{{ room.name }}</h3>
                    {% if room.subject %}
                        <p class="room-subject">{{ room.subject.name }}</p>
                    {% endif %}
                    
                    <div class="room-info">
                        <span class="participant-count">
                            üë• {{ room.participants|length }} {{ room.participants|length == 1 ? 'participant' : 'participants' }}
                        </span>
                    </div>

                    <a href="{{ path('community_room_chat', {'id': room.id}) }}" class="btn btn-primary btn-enter">
                        Enter Room
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p>No virtual rooms available yet.</p>
            <a href="{{ path('community_index') }}" class="btn btn-primary">Return to Hub</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
<style>
.rooms-list-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    background: linear-gradient(135deg, #0f172a 0%, #1a2940 100%);
    color: #fff;
    min-height: 100vh;
}

.rooms-header {
    text-align: center;
    margin-bottom: 3rem;
}

.rooms-header h1 {
    font-size: 2.8rem;
    color: #6840d6;
    margin: 0 0 0.5rem 0;
    font-weight: 800;
    letter-spacing: -0.5px;
}

.rooms-header p {
    font-size: 1.1rem;
    color: #bbb;
    margin-bottom: 1.5rem;
}

.rooms-header .btn-secondary {
    background: linear-gradient(135deg, #2d3e52 0%, #3d4e62 100%);
    color: #6840d6;
    padding: 0.75rem 1.5rem;
    border: 2px solid #6840d6;
    border-radius: 10px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s;
    font-weight: 600;
}

.rooms-header .btn-secondary:hover {
    background: linear-gradient(135deg, #3d4e62 0%, #4d5e72 100%);
    border-color: #af17c2;
    color: #af17c2;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(104, 64, 214, 0.2);
}

.rooms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.room-card {
    background: linear-gradient(135deg, #1a2333 0%, #2d3e52 100%);
    border: 2px solid #6840d6;
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 8px 30px rgba(104, 64, 214, 0.1);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
    overflow: hidden;
}

.room-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #6840d6 0%, #af17c2 100%);
}

.room-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 45px rgba(104, 64, 214, 0.25);
    border-color: #af17c2;
}

.room-icon {
    font-size: 3.5rem;
    line-height: 1;
}

.room-card h3 {
    font-size: 1.6rem;
    margin: 0.5rem 0 0 0;
    color: #fff;
    font-weight: 700;
}

.room-subject {
    color: #2e65d9;
    font-size: 0.95rem;
    margin: 0;
    font-weight: 600;
}

.room-info {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1.2rem 0;
    border-top: 2px solid rgba(104, 64, 214, 0.2);
    border-bottom: 2px solid rgba(104, 64, 214, 0.2);
    flex: 1;
    gap: 1rem;
}

.participant-count {
    background: rgba(46, 101, 217, 0.15);
    color: #94d82d;
    padding: 0.6rem 1.2rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-block;
}

.btn-enter {
    background: linear-gradient(135deg, #6840d6 0%, #af17c2 100%);
    color: #fff;
    padding: 0.85rem 1.8rem;
    border: none;
    border-radius: 10px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(104, 64, 214, 0.2);
}

.btn-enter:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(104, 64, 214, 0.4);
}

.btn-primary {
    background: linear-gradient(135deg, #6840d6 0%, #af17c2 100%);
    color: #fff;
    padding: 0.85rem 1.8rem;
    border: none;
    border-radius: 10px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(104, 64, 214, 0.2);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(104, 64, 214, 0.4);
}

.empty-state {
    text-align: center;
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #1a2333 0%, #2d3e52 100%);
    border: 2px dashed #6840d6;
    border-radius: 15px;
    color: #999;
}

.empty-state p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
}

@media (max-width: 1024px) {
    .rooms-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
}

@media (max-width: 768px) {
    .rooms-header h1 {
        font-size: 2rem;
    }

    .rooms-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .room-card {
        padding: 1.5rem;
    }

    .room-card h3 {
        font-size: 1.4rem;
    }

    .room-icon {
        font-size: 2.5rem;
    }
}
</style>
{% endblock %}
