{% extends 'admin/base.html.twig' %}

{% block title %}Role Requests{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Student+ Role Requests</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Role Requests</li>
            </ol>
            
            {# Flash Messages #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {# Statistics Cards #}
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h5>Pending Requests</h5>
                            <h2>{{ requests|filter(r => r.status == 'pending')|length }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5>Approved</h5>
                            <h2>{{ requests|filter(r => r.status == 'approved')|length }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <h5>Rejected</h5>
                            <h2>{{ requests|filter(r => r.status == 'rejected')|length }}</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-plus me-1"></i>
                    All Requests
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Student Email</th>
                                <th>Motivation</th>
                                <th>Status</th>
                                <th>Requested</th>
                                <th>Reviewed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in requests %}
                            <tr>
                                <td>{{ request.id }}</td>
                                <td>{{ request.user.email }}</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-info" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#motivationModal{{ request.id }}">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                    
                                    {# Modal for motivation #}
                                    <div class="modal fade" id="motivationModal{{ request.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Motivation</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p><strong>From:</strong> {{ request.user.email }}</p>
                                                    <p>{{ request.motivation }}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if request.status == 'pending' %}
                                        <span class="badge bg-warning">Pending</span>
                                    {% elseif request.status == 'approved' %}
                                        <span class="badge bg-success">Approved</span>
                                    {% else %}
                                        <span class="badge bg-danger">Rejected</span>
                                    {% endif %}
                                </td>
                                <td>{{ request.requestedAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    {% if request.reviewedAt %}
                                        {{ request.reviewedAt|date('Y-m-d H:i') }}
                                    {% else %}
                                        <em class="text-muted">Not reviewed</em>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if request.status == 'pending' %}
                                        <a href="{{ path('admin_role_request_approve', {id: request.id}) }}" 
                                           class="btn btn-sm btn-success"
                                           onclick="return confirm('Approve this request?')">
                                            <i class="fas fa-check"></i> Approve
                                        </a>
                                        <a href="{{ path('admin_role_request_reject', {id: request.id}) }}" 
                                           class="btn btn-sm btn-danger">
                                            <i class="fas fa-times"></i> Reject
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Already reviewed</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No role requests found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Your Website 2024</div>
            </div>
        </div>
    </footer>
</div>
{% endblock %}