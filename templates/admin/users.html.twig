{% extends 'admin/base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">User Management</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Users</li>
            </ol>
            
            {# Flash Messages #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-users me-1"></i>
                    All Users
                </div>
                <div class="card-body">
                    {# Search and Filter Section #}
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" id="searchInput" class="form-control" placeholder="ðŸ” Search by email or ID...">
                        </div>
                        <div class="col-md-3">
                            <select id="roleFilter" class="form-select">
                                <option value="">All Roles</option>
                                <option value="ROLE_ADMIN">Admin</option>
                                <option value="ROLE_STUDENT_PLUS">Student+</option>
                                <option value="ROLE_STUDENT">Student</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="verifiedFilter" class="form-select">
                                <option value="">All Status</option>
                                <option value="verified">Verified</option>
                                <option value="unverified">Unverified</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="clearFilters" class="btn btn-secondary w-100">Clear Filters</button>
                        </div>
                    </div>
                    
                    {# User Table #}
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="usersTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Roles</th>
                                    <th>Verified</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                <tr data-email="{{ user.email|lower }}" 
                                    data-id="{{ user.id }}"
                                    data-roles="{{ user.roles|join(',') }}"
                                    data-verified="{{ user.isVerified ? 'verified' : 'unverified' }}">
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {% if role == 'ROLE_ADMIN' %}
                                                <span class="badge bg-danger">Admin</span>
                                            {% elseif role == 'ROLE_STUDENT_PLUS' %}
                                                <span class="badge bg-warning">Student+</span>
                                            {% elseif role == 'ROLE_STUDENT' %}
                                                <span class="badge bg-info">Student</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ role }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if user.isVerified %}
                                            <span class="badge bg-success">Yes</span>
                                        {% else %}
                                            <span class="badge bg-warning">No</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                        <a href="{{ path('admin_users_view', {id: user.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="{{ path('admin_users_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="{{ path('admin_users_delete', {id: user.id}) }}" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this user?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr id="noUsers">
                                    <td colspan="6" class="text-center">No users found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# Results Counter #}
                    <div class="mt-2">
                        <small class="text-muted">
                            Showing <span id="resultCount">{{ users|length }}</span> user(s)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Your Website 2024</div>
            </div>
        </div>
    </footer>
</div>

{# JavaScript for Search and Filter #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const roleFilter = document.getElementById('roleFilter');
    const verifiedFilter = document.getElementById('verifiedFilter');
    const clearFiltersBtn = document.getElementById('clearFilters');
    const tableRows = document.querySelectorAll('#usersTable tbody tr:not(#noUsers)');
    const resultCount = document.getElementById('resultCount');
    
    function filterTable() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedRole = roleFilter.value;
        const selectedVerified = verifiedFilter.value;
        let visibleCount = 0;
        
        tableRows.forEach(row => {
            const email = row.dataset.email || '';
            const id = row.dataset.id || '';
            const roles = row.dataset.roles || '';
            const verified = row.dataset.verified || '';
            
            // Check search term (email or ID)
            const matchesSearch = email.includes(searchTerm) || id.includes(searchTerm);
            
            // Check role filter
            const matchesRole = !selectedRole || roles.includes(selectedRole);
            
            // Check verified filter
            const matchesVerified = !selectedVerified || verified === selectedVerified;
            
            // Show/hide row based on all filters
            if (matchesSearch && matchesRole && matchesVerified) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });
        
        // Update result count
        resultCount.textContent = visibleCount;
        
        // Show "no results" message if needed
        const noResultsRow = document.getElementById('noUsers');
        if (noResultsRow) {
            noResultsRow.style.display = visibleCount === 0 ? '' : 'none';
        }
    }
    
    // Clear all filters
    clearFiltersBtn.addEventListener('click', function() {
        searchInput.value = '';
        roleFilter.value = '';
        verifiedFilter.value = '';
        filterTable();
    });
    
    // Add event listeners
    searchInput.addEventListener('keyup', filterTable);
    roleFilter.addEventListener('change', filterTable);
    verifiedFilter.addEventListener('change', filterTable);
});
</script>
{% endblock %}