{% extends 'admin/base.html.twig' %}

{% block title %}Reject Request{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Reject Role Request</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_role_requests') }}">Role Requests</a></li>
                <li class="breadcrumb-item active">Reject</li>
            </ol>
            
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-times me-1"></i>
                    Reject Request from {{ request.user.email }}
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Motivation from student:</strong><br>
                        {{ request.motivation }}
                    </div>
                    
                    <form method="post">
                        <div class="mb-3">
                            <label for="admin_notes" class="form-label">Reason for Rejection (Optional)</label>
                            <textarea 
                                name="admin_notes" 
                                id="admin_notes" 
                                class="form-control" 
                                rows="4"
                                placeholder="Explain why this request is being rejected..."></textarea>
                            <small class="text-muted">This message will be visible to the student.</small>
                        </div>
                        
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Confirm Rejection
                        </button>
                        <a href="{{ path('admin_role_requests') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}