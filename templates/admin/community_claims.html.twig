{% extends 'admin/base.html.twig' %}

{% block title %}Community Claims Management{% endblock %}
{% block body_class %}guardian-admin-ui{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="guardian-admin-hero">
                <h1>Community Claims Management</h1>
                <p class="text-muted mb-0">Track, prioritize, and resolve user support tickets.</p>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0 d-flex align-items-stretch">
            <div class="guardian-admin-card p-3 w-100 d-flex align-items-center justify-content-center">
                <div class="text-center">
                    <div class="text-muted small">Open / In Progress</div>
                    <h3 class="mb-0">{{ openClaimsCount }}</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="guardian-admin-card p-3 mb-4">
        <form method="GET" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="" {% if not filterStatus %}selected{% endif %}>All</option>
                    <option value="open" {% if filterStatus == 'open' %}selected{% endif %}>Open</option>
                    <option value="in_progress" {% if filterStatus == 'in_progress' %}selected{% endif %}>In progress</option>
                    <option value="resolved" {% if filterStatus == 'resolved' %}selected{% endif %}>Resolved</option>
                    <option value="closed" {% if filterStatus == 'closed' %}selected{% endif %}>Closed</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Priority</label>
                <select name="priority" class="form-select">
                    <option value="" {% if not filterPriority %}selected{% endif %}>All</option>
                    <option value="low" {% if filterPriority == 'low' %}selected{% endif %}>Low</option>
                    <option value="medium" {% if filterPriority == 'medium' %}selected{% endif %}>Medium</option>
                    <option value="high" {% if filterPriority == 'high' %}selected{% endif %}>High</option>
                    <option value="critical" {% if filterPriority == 'critical' %}selected{% endif %}>Critical</option>
                </select>
            </div>
            <div class="col-md-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Apply filters</button>
                <a href="{{ path('admin_community_claims') }}" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>
    </div>

    <div class="guardian-admin-card p-3 table-responsive">
        <table class="table guardian-admin-table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Creator</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Assigned to</th>
                    <th>Created</th>
                    <th style="min-width: 340px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if claims is empty %}
                <tr>
                    <td colspan="8" class="text-center text-muted">No claims found.</td>
                </tr>
            {% else %}
                {% for claim in claims %}
                    <tr>
                        <td>#{{ claim.id }}</td>
                        <td>{{ claim.title }}</td>
                        <td>{{ claim.createdBy.userIdentifier }}</td>
                        <td>
                            {% set s = claim.status %}
                            <span class="badge {% if s == 'open' %}bg-primary{% elseif s == 'in_progress' %}bg-warning text-dark{% elseif s == 'resolved' %}bg-success{% else %}bg-secondary{% endif %}">
                                {{ s|replace({'_':' '})|title }}
                            </span>
                        </td>
                        <td>
                            {% set p = claim.priority %}
                            <span class="badge {% if p == 'critical' %}bg-danger{% elseif p == 'high' %}bg-warning text-dark{% elseif p == 'medium' %}bg-info text-dark{% else %}bg-secondary{% endif %}">
                                {{ p|title }}
                            </span>
                        </td>
                        <td>
                            {% if claim.assignedTo %}
                                {{ claim.assignedTo.userIdentifier }}
                            {% else %}
                                <span class="text-muted">Unassigned</span>
                            {% endif %}
                        </td>
                        <td>{{ claim.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <div class="d-flex flex-column gap-2">
                                <a href="{{ path('community_claim_view', {id: claim.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                                <form method="POST" action="{{ path('admin_community_claim_update_status', {id: claim.id}) }}" class="d-flex flex-wrap gap-2 align-items-center">
                                    <select name="status" class="form-select form-select-sm" style="min-width: 130px;">
                                        <option value="open" {% if claim.status == 'open' %}selected{% endif %}>Open</option>
                                        <option value="in_progress" {% if claim.status == 'in_progress' %}selected{% endif %}>In progress</option>
                                        <option value="resolved" {% if claim.status == 'resolved' %}selected{% endif %}>Resolved</option>
                                        <option value="closed" {% if claim.status == 'closed' %}selected{% endif %}>Closed</option>
                                    </select>
                                    <select name="priority" class="form-select form-select-sm" style="min-width: 120px;">
                                        <option value="low" {% if claim.priority == 'low' %}selected{% endif %}>Low</option>
                                        <option value="medium" {% if claim.priority == 'medium' %}selected{% endif %}>Medium</option>
                                        <option value="high" {% if claim.priority == 'high' %}selected{% endif %}>High</option>
                                        <option value="critical" {% if claim.priority == 'critical' %}selected{% endif %}>Critical</option>
                                    </select>
                                    <input type="text" name="admin_notes" class="form-control form-control-sm" placeholder="Admin notes" style="min-width: 160px;" value="{{ claim.adminNotes ?? '' }}">
                                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                </form>
                                <form method="POST" action="{{ path('admin_community_claim_assign', {id: claim.id}) }}" class="d-flex flex-wrap gap-2 align-items-center">
                                    <select name="assigned_to_id" class="form-select form-select-sm" style="min-width: 180px;">
                                        <option value="">Unassigned</option>
                                        {% for assignableUser in assignableUsers %}
                                            <option value="{{ assignableUser.id }}" {% if claim.assignedTo and claim.assignedTo.id == assignableUser.id %}selected{% endif %}>
                                                {{ assignableUser.userIdentifier }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Assign</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
