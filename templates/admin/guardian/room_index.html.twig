{% extends 'admin/base.html.twig' %}

{% block title %}Virtual Room Management{% endblock %}
{% block body_class %}guardian-admin-ui{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="guardian-admin-hero">
                <h1>Virtual Room Management</h1>
                <p class="text-muted mb-0">Manage room activity and availability.</p>
            </div>
        </div>
    </div>

    {% if rooms is empty %}
        <div class="guardian-admin-card p-4 text-center">
            No virtual rooms available.
        </div>
    {% else %}
        <div class="guardian-admin-card p-3 table-responsive">
            <table class="table guardian-admin-table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Creator</th>
                        <th>Participants</th>
                        <th>Max Capacity</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for room in rooms %}
                        <tr>
                            <td>{{ room.name }}</td>
                            <td>{{ room.subject.name }}</td>
                            <td>{{ room.creator.firstName }} {{ room.creator.lastName }}</td>
                            <td>{{ room.participants|length }}</td>
                            <td>{{ room.maxParticipants }}</td>
                            <td>
                                {% if room.isActive %}
                                    <span class="badge bg-success">Active</span>
                                {% else %}
                                    <span class="badge bg-danger">Closed</span>
                                {% endif %}
                            </td>
                            <td>{{ room.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <form method="POST" action="{{ path('admin_room_toggle', {id: room.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_room_' ~ room.id) }}">
                                    <button type="submit" class="btn btn-sm {% if room.isActive %}btn-warning{% else %}btn-info{% endif %}">
                                        <i class="fas fa-toggle-{{ room.isActive ? 'on' : 'off' }}"></i>
                                        {{ room.isActive ? 'Close' : 'Open' }}
                                    </button>
                                </form>
                                <form method="POST" action="{{ path('admin_room_delete', {id: room.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_room_' ~ room.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
