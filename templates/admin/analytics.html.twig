{% extends 'admin/base.html.twig' %}

{% block title %}Admin Analytics{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Admin Analytics</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Analytics</li>
            </ol>

            {# Flash Messages #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {# User Stats Cards #}
            <div class="row">
                {% set cards = [
                    {'title':'Total Users','value':userStats.total_users,'icon':'fas fa-users','color':'primary'},
                    {'title':'Verified Users','value':userStats.verified_users,'icon':'fas fa-user-check','color':'success'},
                    {'title':'New Today','value':userStats.new_today,'icon':'fas fa-calendar-day','color':'warning text-dark'},
                    {'title':'New This Week','value':userStats.new_week,'icon':'fas fa-calendar-week','color':'info'},
                    {'title':'Users with Profile','value':userStats.users_with_profile,'icon':'fas fa-id-badge','color':'secondary'},
                    {'title':'Users with Avatar','value':userStats.users_with_avatar,'icon':'fas fa-image','color':'dark'},
                    {'title':'Users with Bio','value':userStats.users_with_bio,'icon':'fas fa-pencil-alt','color':'warning text-dark'}
                ] %}
                
                {% for card in cards %}
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card bg-{{ card.color }} text-white h-100">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="{{ card.icon }} fa-2x me-2"></i>
                                    <span>{{ card.title }}</span>
                                </div>
                                <h3>{{ card.value }}</h3>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Activity Stats Cards #}
            <h2 class="mt-5">Activity Stats</h2>
            <div class="row">
                {% set activity_cards = [
                    {'title':'Active Today','value':activityStats.active_today,'icon':'fas fa-bolt','color':'primary'},
                    {'title':'Active This Week','value':activityStats.active_week,'icon':'fas fa-calendar-week','color':'success'},
                    {'title':'Avg Focus Time','value':activityStats.avg_focus_time|number_format(0) ~ ' min','icon':'fas fa-clock','color':'warning text-dark'},
                    {'title':'Total Focus Time','value':activityStats.total_focus,'icon':'fas fa-hourglass-half','color':'info'}
                ] %}
                
                {% for card in activity_cards %}
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card bg-{{ card.color }} text-white h-100">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="{{ card.icon }} fa-2x me-2"></i>
                                    <span>{{ card.title }}</span>
                                </div>
                                <h3>{{ card.value }}</h3>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Recent Users Table #}
            <h2 class="mt-5">Recent Users</h2>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-users me-1"></i>
                    Latest Users
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Avatar</th>
                                    <th>Last Focus</th>
                                    <th>Focus Sessions</th>
                                    <th>Total Focus Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in recentUsers %}
                                    <tr>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.first_name }} {{ user.last_name }}</td>
                                        <td>
                                            {% if user.avatar %}
                                                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" width="40" class="rounded-circle">
                                            {% else %}
                                                <span class="text-muted">No avatar</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ user.last_focus ? user.last_focus|date('Y-m-d H:i') : 'Never' }}</td>
                                        <td>{{ user.focus_sessions }}</td>
                                        <td>{{ user.total_focus_time ?? 0 }} min</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">No users found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {# Locales & Timezones #}
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-globe me-1"></i> Locales</div>
                        <div class="card-body">
                            <ul class="list-group">
                                {% for locale, count in locales %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{ locale }}
                                        <span class="badge bg-primary rounded-pill">{{ count }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header"><i class="fas fa-clock me-1"></i> Timezones</div>
                        <div class="card-body">
                            <ul class="list-group">
                                {% for tz, count in timezones %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{ tz }}
                                        <span class="badge bg-secondary rounded-pill">{{ count }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>

    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
             
            </div>
        </div>
    </footer>
</div>
{% endblock %}
