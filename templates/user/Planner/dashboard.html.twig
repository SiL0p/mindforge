{# templates/user/planner/dashboard.html.twig #}
{% extends 'user/planner/base_planner.html.twig' %}

{% block title %}Dashboard - Planner | MindForge{% endblock %}

{% block planner_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="montserrat h3 mb-1">Dashboard Planner</h1>
        <p class="text-muted-mf mb-0">Vue d'ensemble de votre planning académique</p>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('app_planner_task_new') }}" class="btn btn-primary-mf">
            <i class="bi bi-plus-lg me-2"></i>Tâche
        </a>
        <a href="{{ path('app_planner_exam_new') }}" class="btn btn-outline-mf">
            <i class="bi bi-plus-lg me-2"></i>Examen
        </a>
    </div>
</div>

<div class="row g-4">
    {# Stats Cards #}
    <div class="col-md-3">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-primary-mf bg-opacity-10 p-3 me-3">
                    <i class="bi bi-check-circle text-primary-mf fs-4"></i>
                </div>
                <div>
                    <h3 class="mb-0">{{ stats.tasks_done|default(0) }}</h3>
                    <small class="text-muted-mf">Tâches terminées</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                    <i class="bi bi-hourglass-split text-warning fs-4"></i>
                </div>
                <div>
                    <h3 class="mb-0">{{ stats.tasks_pending|default(0) }}</h3>
                    <small class="text-muted-mf">En cours</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-accent bg-opacity-10 p-3 me-3" style="background: rgba(175, 23, 194, 0.1);">
                    <i class="bi bi-mortarboard text-accent fs-4"></i>
                </div>
                <div>
                    <h3 class="mb-0">{{ stats.upcoming_exams|default(0) }}</h3>
                    <small class="text-muted-mf">Examens à venir</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                    <i class="bi bi-lightning-charge text-success fs-4"></i>
                </div>
                <div>
                    <h3 class="mb-0">{{ stats.focus_hours|default(0) }}h</h3>
                    <small class="text-muted-mf">Heures de focus</small>
                </div>
            </div>
        </div>
    </div>

    {# Tâches prioritaires #}
    <div class="col-lg-8">
        <div class="card-mf p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="montserrat mb-0">Tâches prioritaires</h5>
                <a href="{{ path('app_planner_tasks') }}" class="text-primary-mf text-decoration-none small">Voir tout</a>
            </div>
            {% if priority_tasks is defined and priority_tasks|length > 0 %}
                <div class="list-group list-group-flush">
                    {% for task in priority_tasks %}
                        <div class="list-group-item bg-transparent border-mindforge px-0 py-3">
                            <div class="d-flex align-items-center">
                                <div class="priority-{{ task.priority == 3 ? 'high' : task.priority == 2 ? 'medium' : 'low' }} ps-3 me-3"></div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">{{ task.title }}</h6>
                                    <small class="text-muted-mf">
                                        {% if task.subject %}
                                            <span class="badge bg-card border border-mindforge me-2">{{ task.subject.name }}</span>
                                        {% endif %}
                                        {% if task.dueDate %}
                                            <i class="bi bi-clock me-1"></i>{{ task.dueDate|date('d/m/Y') }}
                                        {% endif %}
                                    </small>
                                </div>
                                <a href="{{ path('app_planner_task_edit', {id: task.id}) }}" class="btn btn-sm btn-outline-mf">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted-mf text-center py-4">Aucune tâche prioritaire</p>
            {% endif %}
        </div>
    </div>

    {# Prochains examens #}
    <div class="col-lg-4">
        <div class="card-mf p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="montserrat mb-0">Prochains examens</h5>
                <a href="{{ path('app_planner_exams') }}" class="text-primary-mf text-decoration-none small">Voir tout</a>
            </div>
            {% if upcoming_exams is defined and upcoming_exams|length > 0 %}
                <div class="vstack gap-3">
                    {% for exam in upcoming_exams %}
                        <div class="d-flex align-items-center p-3 rounded" style="background: rgba(175, 23, 194, 0.05); border: 1px solid rgba(175, 23, 194, 0.2);">
                            <div class="text-center me-3">
                                <div class="text-accent fw-bold">{{ exam.examDate|date('d') }}</div>
                                <small class="text-muted-mf">{{ exam.examDate|date('M') }}</small>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1 text-truncate">{{ exam.title }}</h6>
                                <small class="text-muted-mf">
                                    {% if exam.subject %}{{ exam.subject.name }}{% endif %}
                                    {% if exam.location %}<i class="bi bi-geo-alt ms-2 me-1"></i>{{ exam.location }}{% endif %}
                                </small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted-mf text-center py-4">Aucun examen à venir</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}