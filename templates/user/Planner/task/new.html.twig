{# templates/user/planner/task/new.html.twig #}
{% extends 'user/planner/base_planner.html.twig' %}

{% block title %}{{ task.id ? 'Modifier' : 'Nouvelle' }} Tâche | MindForge{% endblock %}

{% block planner_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_planner_tasks') }}" class="btn btn-outline-mf btn-sm me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h1 class="montserrat h4 mb-0">
                    {% if isVoice|default(false) %}
                        <i class="bi bi-mic-fill text-primary-mf me-2"></i>
                    {% endif %}
                    {{ task.id ? 'Modifier la tâche' : 'Nouvelle tâche' }}
                </h1>
            </div>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="mb-4">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-mf' ~ (form.title.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.title, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-mf'}}) }}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'form-select form-select-mf'}}) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.priority, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.priority, {'attr': {'class': 'form-select form-select-mf'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.dueDate, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.dueDate, {'attr': {'class': 'form-control form-control-mf'}}) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.estimatedMinutes, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.estimatedMinutes, {'attr': {'class': 'form-control form-control-mf'}}) }}
                            <span class="input-group-text bg-card border-mindforge text-muted-mf">min</span>
                        </div>
                        {{ form_errors(form.estimatedMinutes) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_planner_tasks') }}" class="btn btn-outline-mf">Annuler</a>
                    <button type="submit" class="btn btn-primary-mf px-4">
                        <i class="bi bi-check-lg me-2"></i>
                        {{ task.id ? 'Mettre à jour' : 'Créer la tâche' }}
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}