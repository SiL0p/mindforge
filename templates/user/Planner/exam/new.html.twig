{# templates/user/planner/exam/new.html.twig #}
{% extends 'user/planner/base_planner.html.twig' %}

{% block title %}{{ exam.id ? 'Modifier' : 'Nouvel' }} Examen | MindForge{% endblock %}

{% block planner_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card-mf p-4">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_planner_exams') }}" class="btn btn-outline-mf btn-sm me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h1 class="montserrat h4 mb-0">
                    {{ exam.id ? 'Modifier l\'examen' : 'Nouvel examen' }}
                </h1>
            </div>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="mb-4">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-mf' ~ (form.title.vars.valid ? '' : ' is-invalid')}}) }}
                    {{ form_errors(form.title, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-mf', 'rows': 3}}) }}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'form-select form-select-mf'}}) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.location, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.location, {'attr': {'class': 'form-control form-control-mf', 'placeholder': 'Salle A101'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.examDate, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(form.examDate, {'attr': {'class': 'form-control form-control-mf' ~ (form.examDate.vars.valid ? '' : ' is-invalid')}}) }}
                        {{ form_errors(form.examDate) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.durationMinutes, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.durationMinutes, {'attr': {'class': 'form-control form-control-mf'}}) }}
                            <span class="input-group-text bg-card border-mindforge text-muted-mf">min</span>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.importance, null, {'label_attr': {'class': 'form-label text-light'}}) }}
                    <div class="d-flex align-items-center">
                        <span class="text-muted-mf me-3">1</span>
                        {{ form_widget(form.importance, {'attr': {'class': 'form-range flex-grow-1', 'style': 'accent-color: var(--mf-accent)'}}) }}
                        <span class="text-accent ms-3 fw-bold">10</span>
                    </div>
                    <small class="text-muted-mf">Niveau d'importance de cet examen</small>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_planner_exams') }}" class="btn btn-outline-mf">Annuler</a>
                    <button type="submit" class="btn btn-primary-mf px-4">
                        <i class="bi bi-check-lg me-2"></i>
                        {{ exam.id ? 'Mettre Ã  jour' : 'Programmer l\'examen' }}
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}