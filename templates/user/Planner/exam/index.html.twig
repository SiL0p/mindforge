{# templates/user/planner/exam/index.html.twig #}
{% extends 'user/planner/base_planner.html.twig' %}

{% block title %}Mes Examens | MindForge{% endblock %}

{% block planner_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="montserrat h3 mb-1">Mes Examens</h1>
        <p class="text-muted-mf mb-0">Gérez vos examens et échéances importantes</p>
    </div>
    <a href="{{ path('app_planner_exam_new') }}" class="btn btn-primary-mf">
        <i class="bi bi-plus-lg me-2"></i>Ajouter un examen
    </a>
</div>

{% if upcoming is not empty %}
    <h5 class="montserrat mb-3 text-accent">
        <i class="bi bi-calendar-event me-2"></i>À venir
    </h5>
    <div class="row g-4 mb-5">
        {% for exam in upcoming %}
            <div class="col-md-6 col-lg-4">
                <div class="card-mf p-4 h-100 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3">
                        <div class="dropdown">
                            <button class="btn btn-link text-muted-mf p-0" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end bg-card border-mindforge">
                                <li>
                                    <a class="dropdown-item text-light" href="{{ path('app_planner_exam_edit', {id: exam.id}) }}">
                                        <i class="bi bi-pencil me-2"></i>Modifier
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider border-mindforge"></li>
                                <li>
                                    <form method="post" action="{{ path('app_planner_exam_delete', {id: exam.id}) }}" onsubmit="return confirm('Supprimer cet examen ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-trash me-2"></i>Supprimer
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="text-center me-3 p-3 rounded" style="background: rgba(175, 23, 194, 0.1); min-width: 60px;">
                            <div class="text-accent fw-bold fs-4">{{ exam.examDate|date('d') }}</div>
                            <div class="text-muted-mf small text-uppercase">{{ exam.examDate|date('M') }}</div>
                        </div>
                        <div>
                            <h5 class="mb-1">{{ exam.title }}</h5>
                            <small class="text-muted-mf">
                                <i class="bi bi-clock me-1"></i>{{ exam.examDate|date('H:i') }}
                            </small>
                        </div>
                    </div>
                    
                    {% if exam.subject %}
                        <div class="mb-2">
                            <span class="badge" style="background: {{ exam.subject.color }}20; color: {{ exam.subject.color }}; border: 1px solid {{ exam.subject.color }}40;">
                                {{ exam.subject.name }}
                            </span>
                        </div>
                    {% endif %}
                    
                    {% if exam.location %}
                        <div class="text-muted-mf small mb-2">
                            <i class="bi bi-geo-alt me-2"></i>{{ exam.location }}
                        </div>
                    {% endif %}
                    
                    {% if exam.durationMinutes %}
                        <div class="text-muted-mf small">
                            <i class="bi bi-hourglass me-2"></i>Durée: {{ exam.durationMinutes }} minutes
                        </div>
                    {% endif %}
                    
                    <div class="mt-3 pt-3 border-top border-mindforge">
                        <div class="d-flex align-items-center">
                            <small class="text-muted-mf">Importance:</small>
                            <div class="ms-2 flex-grow-1">
                                <div class="progress" style="height: 6px; background-color: var(--mf-border);">
                                    <div class="progress-bar bg-accent" style="width: {{ exam.importance * 10 }}%"></div>
                                </div>
                            </div>
                            <small class="ms-2 text-accent">{{ exam.importance }}/10</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if past is not empty %}
    <h5 class="montserrat mb-3 text-muted-mf">
        <i class="bi bi-archive me-2"></i>Passés
    </h5>
    <div class="list-group list-group-flush">
        {% for exam in past|slice(0, 5) %}
            <div class="list-group-item bg-transparent border-mindforge px-0 py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1 text-muted-mf">{{ exam.title }}</h6>
                    <small class="text-muted-mf">
                        {{ exam.examDate|date('d/m/Y') }}
                        {% if exam.subject %}• {{ exam.subject.name }}{% endif %}
                    </small>
                </div>
                <span class="badge bg-success bg-opacity-10 text-success border border-success">Terminé</span>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if upcoming is empty and past is empty %}
    <div class="text-center py-5">
        <i class="bi bi-mortarboard fs-1 text-muted-mf mb-3 d-block"></i>
        <h5 class="text-muted-mf">Aucun examen programmé</h5>
        <p class="text-muted-mf">Ajoutez votre premier examen pour commencer</p>
        <a href="{{ path('app_planner_exam_new') }}" class="btn btn-primary-mf mt-3">
            <i class="bi bi-plus-lg me-2"></i>Ajouter un examen
        </a>
    </div>
{% endif %}
{% endblock %}