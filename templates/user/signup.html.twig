{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
<div id="home" class="hero-area">
    <div class="bg-image bg-parallax overlay"
         style="background-image:url({{ asset('user/img/home-background.jpg') }})"></div>

    <div class="container">
        <div class="row">

            <!-- Spacer to push content below header -->
            <div class="col-md-12" style="height:180px;"></div>

            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        <h3>Create an Account</h3>
                    </div>

                    <div class="panel-body">

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <form method="POST" action="{{ path('app_signup') }}">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('signup') }}">

                            <div class="form-group">
                                <label for="first_name">First Name</label>
                                <input type="text" name="first_name" id="first_name"
                                       class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="last_name">Last Name</label>
                                <input type="text" name="last_name" id="last_name"
                                       class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email"
                                       class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password"
                                       class="form-control" required>
                            </div>

                            <button class="main-button btn-block" type="submit">
                                <i class="fa fa-user-plus"></i> Sign Up
                            </button>
                        </form>

                        <hr>
                        <p class="text-center">
                            Already have an account?
                            <a href="{{ path('app_login') }}">Login</a>
                        </p>

                    </div>
                </div>
            </div>

            <!-- Bottom spacer -->
            <div class="col-md-12" style="height:120px;"></div>

        </div>
    </div>
</div>
{% endblock %}
