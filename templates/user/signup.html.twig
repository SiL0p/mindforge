{% extends 'base.html.twig' %}
{% block title %}Sign Up{% endblock %}
{% block body %}
<!-- Header -->
<header id="header" class="transparent-nav">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand">
                <a class="logo" href="{{ path('app_home') }}">
                    <img src="{{ asset('user/img/logo-alt.png') }}" alt="logo">
                </a>
            </div>
            <button class="navbar-toggle">
                <span></span>
            </button>
        </div>
        <nav id="nav">
            <ul class="main-menu nav navbar-nav navbar-right">
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_blog') }}">Blog</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
            </ul>
        </nav>
    </div>
</header>
<!-- /Header -->

<!-- Hero -->
<div id="home" class="hero-area">
    <div class="bg-image bg-parallax overlay" style="background-image:url({{ asset('user/img/home-background.jpg') }})"></div>
    <div class="home-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default" style="margin-top:50px;">
                        <div class="panel-heading text-center">
                            <h3>Create an Account</h3>
                        </div>
                        <div class="panel-body">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            
                            <form method="POST" action="{{ path('app_signup') }}">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input 
                                        type="text" 
                                        name="username" 
                                        id="username" 
                                        class="form-control" 
                                        required
                                        autofocus
                                        placeholder="Enter your username">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input 
                                        type="email" 
                                        name="email" 
                                        id="email" 
                                        class="form-control" 
                                        required
                                        placeholder="Enter your email">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input 
                                        type="password" 
                                        name="password" 
                                        id="password" 
                                        class="form-control" 
                                        required
                                        placeholder="Enter your password">
                                </div>
                                <button class="main-button btn-block" type="submit">
                                    <i class="fa fa-user-plus"></i> Sign Up
                                </button>
                            </form>
                            <hr>
                            <p class="text-center">
                                Already have an account? <a href="{{ path('app_login') }}">Login</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Hero -->
{% endblock %}