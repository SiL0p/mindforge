{% extends 'base.html.twig' %}

{% block title %}Ajouter une Ressource{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Ajouter une Ressource</h1>
            <p class="text-muted">Partagez une ressource pédagogique avec la communauté</p>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="form-group mb-3">
                        {{ form_label(form.title, 'Titre de la Ressource') }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Les Fractions en Mathématiques'}}) }}
                        {% if form.title.vars.errors|length %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.title) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez votre ressource...'}}) }}
                        {% if form.description.vars.errors|length %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.type, 'Type de Ressource') }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                {% if form.type.vars.errors|length %}
                                    <div class="invalid-feedback d-block">
                                        {{ form_errors(form.type) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                {{ form_label(form.subject, 'Sujet') }}
                                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                {% if form.subject.vars.errors|length %}
                                    <div class="invalid-feedback d-block">
                                        {{ form_errors(form.subject) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.file, 'Fichier') }}
                        <div class="form-text mb-2">Formats acceptés: PDF, Image, Document</div>
                        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                        {% if form.file.vars.errors|length %}
                            <div class="invalid-feedback d-block">
                                {{ form_errors(form.file) }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Ajouter la Ressource
                        </button>
                        <a href="{{ path('guardian_library') }}" class="btn btn-secondary">Annuler</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
