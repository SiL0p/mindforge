{% extends 'base.html.twig' %}

{% block title %}Ajouter une Ressource{% endblock %}
{% block body_class %}guardian-ui{% endblock %}

{% block content %}
<div class="guardian-shell">
    <section class="guardian-hero mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
            <div>
                <span class="guardian-pill"><i class="fas fa-upload"></i> Partage rapide</span>
                <h1 class="guardian-title">Ajouter une Ressource</h1>
                <p class="guardian-subtitle">Faites circuler les meilleures idees de la communaute.</p>
            </div>
            <a href="{{ path('guardian_library') }}" class="btn btn-outline-dark">Retour a la bibliotheque</a>
        </div>
    </section>

    <div class="row">
        <div class="col-lg-8">
            <div class="guardian-panel p-4">
                {{ form_start(form) }}

                <div class="form-group mb-3">
                    {{ form_label(form.title, 'Titre de la Ressource') }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Les Fractions en Mathematiques'}}) }}
                    {% if form.title.vars.errors|length %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.title) }}
                        </div>
                    {% endif %}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Decrivez votre ressource...'}}) }}
                    {% if form.description.vars.errors|length %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.type, 'Type de Ressource') }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                            {% if form.type.vars.errors|length %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.type) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.subject, 'Sujet') }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-select'}}) }}
                            {% if form.subject.vars.errors|length %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.subject) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.file, 'Fichier') }}
                    <div class="form-text mb-2">Formats acceptes: PDF</div>
                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                    {% if form.file.vars.errors|length %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.file) }}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload"></i> Ajouter la Ressource
                    </button>
                    <a href="{{ path('guardian_library') }}" class="btn btn-outline-dark">Annuler</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="guardian-panel p-4">
                <h5 class="mb-2">Tips sympa</h5>
                <p class="text-muted">Plus votre description est claire, plus elle aide.</p>
                <div class="d-grid gap-2 text-muted small">
                    <span>1. Ajoutez un titre precis.</span>
                    <span>2. Choisissez un sujet pertinent.</span>
                    <span>3. Telechargez un PDF propre.</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
