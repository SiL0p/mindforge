{% extends 'base.html.twig' %}

{% block title %}Create a Virtual Room{% endblock %}
{% block body_class %}guardian-ui{% endblock %}

{% block content %}
<div class="guardian-shell">
    <section class="guardian-hero mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
            <div>
                <span class="guardian-pill"><i class="fas fa-magic"></i> New room</span>
                <h1 class="guardian-title">Create a Virtual Room</h1>
                <p class="guardian-subtitle">Define a welcoming space to learn together.</p>
            </div>
            <a href="{{ path('guardian_rooms') }}" class="btn btn-outline-dark">Back to rooms</a>
        </div>
    </section>

    <div class="row">
        <div class="col-lg-8">
            <div class="guardian-panel p-4">
                {{ form_start(form) }}

                <div class="form-group mb-3">
                    {{ form_label(form.name, 'Room name') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Example: Study Group - Mathematics'}}) }}
                    {% if form.name.vars.errors|length %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.name) }}
                        </div>
                    {% endif %}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Describe the goal of your room...'}}) }}
                    {% if form.description.vars.errors|length %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.subject, 'Subject') }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-select'}}) }}
                            {% if form.subject.vars.errors|length %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.subject) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.maxParticipants, 'Maximum participants') }}
                            {{ form_widget(form.maxParticipants, {'attr': {'class': 'form-select'}}) }}
                            {% if form.maxParticipants.vars.errors|length %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.maxParticipants) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="form-check form-switch">
                        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ form.isActive.vars.id }}">
                            Room is active upon creation
                        </label>
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create room
                    </button>
                    <a href="{{ path('guardian_rooms') }}" class="btn btn-outline-dark">Cancel</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="guardian-panel p-4">
                <h5 class="mb-2">Quick tips</h5>
                <p class="text-muted">A clear name and simple goal make rooms inviting.</p>
                <div class="d-grid gap-2 text-muted small">
                    <span>1. Pick a specific subject.</span>
                    <span>2. Set a realistic capacity.</span>
                    <span>3. Write a motivating description.</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
