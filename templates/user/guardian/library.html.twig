{% extends 'workspace/module_base.html.twig' %}

{% block title %}Resource Library{% endblock %}
{% block body_class %}guardian-ui{% endblock %}

{% block module_title %}Guardian Library{% endblock %}
{% block module_subtitle %}Browse and manage learning resources.{% endblock %}
{% block module_content %}
<div class="guardian-shell">
    <section class="guardian-hero mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 position-relative">
            <div>
                <span class="guardian-pill"><i class="fas fa-book-open"></i> Popular resources</span>
                <h1 class="guardian-title">Resource Library</h1>
                <p class="guardian-subtitle">Browse a curated collection of shared learning resources.</p>
            </div>
            {% if can_upload %}
                <a href="{{ path('guardian_resource_upload') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-upload"></i> Add a resource
                </a>
            {% endif %}
        </div>
    </section>

    <section class="guardian-panel p-4 mb-4">
        <form method="GET" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="subject" class="form-label">Subject</label>
                <select id="subject" name="subject" class="form-select">
                    <option value="">-- All subjects --</option>
                    {% for subject in subjects %}
                        <option value="{{ subject.id }}" {% if filters.subject == subject.id %}selected{% endif %}>
                            {{ subject.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-4">
                <label for="type" class="form-label">Type</label>
                <select id="type" name="type" class="form-select">
                    <option value="">-- All types --</option>
                    <option value="pdf" {% if filters.type == 'pdf' %}selected{% endif %}>PDF</option>
                    <option value="summary" {% if filters.type == 'summary' %}selected{% endif %}>Summary</option>
                    <option value="cheat_sheet" {% if filters.type == 'cheat_sheet' %}selected{% endif %}>Cheat sheet</option>
                    <option value="exercise" {% if filters.type == 'exercise' %}selected{% endif %}>Exercises</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="search" class="form-label">Search</label>
                <input type="text" id="search" name="search" class="form-control" value="{{ filters.search }}" placeholder="Search...">
            </div>
            <div class="col-12 d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-success">Filter</button>
                <a href="{{ path('guardian_library') }}" class="btn btn-outline-dark">Reset</a>
            </div>
        </form>
    </section>

    {% if resources is empty %}
        <div class="guardian-panel p-4 text-center">
            <h4 class="mb-2">No resources yet</h4>
            <p class="text-muted">Adjust your filters or upload a new contribution.</p>
        </div>
    {% else %}
        <div class="row">
            {% for resource in resources %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="guardian-card h-100 p-3" style="animation-delay: {{ loop.index0 * 60 }}ms;">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div>
                                <h5 class="mb-1">{{ resource.title }}</h5>
                                <div class="text-muted small">{{ resource.subject.name }}</div>
                            </div>
                            <span class="guardian-badge" style="background: rgba(72,198,239,0.2); color: #1b4d6b;">
                                {{ resource.type|upper }}
                            </span>
                        </div>
                        <p class="text-muted">{{ resource.description ? resource.description|slice(0, 110) ~ 'â€¦' : 'No description yet.' }}</p>
                        <div class="d-flex justify-content-between align-items-center text-muted small mb-3">
                            <span><i class="fas fa-user"></i>
                                {{ resource.uploader.profile and resource.uploader.profile.fullName
                                    ? resource.uploader.profile.fullName
                                    : resource.uploader.userIdentifier
                                }}
                            </span>
                            <span><i class="fas fa-download"></i> {{ resource.downloadCount }}</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('guardian_resource_download', {id: resource.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-download"></i> Download
                            </a>
                            {% if app.user == resource.uploader or is_granted('ROLE_ADMIN') %}
                                <form method="POST" action="{{ path('guardian_resource_delete', {id: resource.id}) }}" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_own_resource_' ~ resource.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-dark">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
