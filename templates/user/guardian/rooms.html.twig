{% extends 'workspace/module_base.html.twig' %}

{% block title %}Virtual Rooms{% endblock %}
{% block body_class %}guardian-ui{% endblock %}

{% block module_title %}Virtual Rooms{% endblock %}
{% block module_subtitle %}Collaborate with peers in real-time rooms.{% endblock %}
{% block module_content %}
<div class="guardian-shell">
    <section class="guardian-hero mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
            <div>
                <span class="guardian-pill"><i class="fas fa-users"></i> Instant collaboration</span>
                <h1 class="guardian-title">Virtual Rooms</h1>
                <p class="guardian-subtitle">Join a room to discuss, review, and move forward together.</p>
            </div>
            {% if can_create %}
                <a href="{{ path('guardian_room_create') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Create a room
                </a>
            {% endif %}
        </div>
    </section>

    <section class="guardian-panel p-4 mb-4">
        <form method="GET" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="subject" class="form-label">Filter by subject</label>
                <select id="subject" name="subject" class="form-select">
                    <option value="">-- All subjects --</option>
                    {% for subject in subjects %}
                        <option value="{{ subject.id }}" {% if current_subject == subject.id %}selected{% endif %}>
                            {{ subject.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success w-100">Filter</button>
            </div>
        </form>
    </section>

    {% if rooms is empty %}
        <div class="guardian-panel p-4 text-center">
            <h4 class="mb-2">No rooms yet</h4>
            <p class="text-muted">Check back soon or create the first room.</p>
            {% if can_create %}
                <a href="{{ path('guardian_room_create') }}" class="btn btn-primary">Create a room</a>
            {% endif %}
        </div>
    {% else %}
        <div class="row">
            {% for room in rooms %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="guardian-card h-100 p-3" style="animation-delay: {{ loop.index0 * 60 }}ms;">
                        <div class="d-flex align-items-start justify-content-between">
                            <div>
                                <h5 class="mb-1">{{ room.name }}</h5>
                                <div class="text-muted small">{{ room.subject.name }}</div>
                            </div>
                            <span class="guardian-badge" style="background: {{ room.isFull ? 'rgba(255, 107, 107, 0.2)' : 'rgba(72, 198, 239, 0.2)' }}; color: {{ room.isFull ? '#9b1c1c' : '#1b4d6b' }};">
                                {{ room.isFull ? 'Full' : 'Available' }}
                            </span>
                        </div>
                        <p class="text-muted mt-3">{{ room.description ?: 'No description yet.' }}</p>
                        <div class="d-flex flex-wrap gap-2 text-muted small mb-3">
                            <span><i class="fas fa-user"></i>
                                {{ room.creator.profile and room.creator.profile.fullName
                                    ? room.creator.profile.fullName
                                    : room.creator.userIdentifier
                                }}
                            </span>
                            <span><i class="fas fa-users"></i> {{ room.participants|length }}/{{ room.maxParticipants }}</span>
                            <span><i class="fas fa-calendar"></i> {{ room.createdAt|date('d/m/Y') }}</span>
                        </div>
                        <div class="d-flex flex-wrap gap-2 align-items-center">
                            <a href="{{ path('guardian_room_detail', {id: room.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i> View
                            </a>
                            {% if not app.user in room.participants and not room.isFull %}
                                <form method="POST" action="{{ path('guardian_room_join', {id: room.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join_room_' ~ room.id) }}">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="fas fa-sign-in-alt"></i> Join
                                    </button>
                                </form>
                            {% elseif app.user in room.participants %}
                                <span class="guardian-badge" style="background: rgba(124, 92, 255, 0.2); color: #3f2fbf;">You are a member</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
