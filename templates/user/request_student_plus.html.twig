{% extends 'base.html.twig' %}

{% block title %}Request Student+ Status{% endblock %}

{% block body %}
<!-- Header -->
<header id="header">
    <div class="container">
        <div class="navbar-header">
            <!-- Logo -->
            <div class="navbar-brand">
                <a class="logo" href="{{ path('app_home') }}">
                    <img src="{{ asset('user/img/logo.png') }}" alt="logo">
                </a>
            </div>
            <!-- /Logo -->
        </div>

        <!-- Navigation -->
        <nav id="nav">
            <ul class="main-menu nav navbar-nav navbar-right">
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_request_status') }}">My Requests</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
            </ul>
        </nav>
        <!-- /Navigation -->
    </div>
</header>
<!-- /Header -->

<!-- Hero-area -->
<div class="hero-area section">
    <div class="bg-image bg-parallax overlay"
         style="background-image:url({{ asset('user/img/blog-post-background.jpg') }})"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <h1 class="white-text">Request Student+ Status</h1>
                <p class="white-text">Tell us why you want to become a Student+ member</p>
            </div>
        </div>
    </div>
</div>
<!-- /Hero-area -->

<!-- Form Section -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="blog-post"
                     style="padding: 30px; background: #fff; border-radius: 10px; box-shadow: 0 0 20px rgba(0,0,0,0.1);">

                    {# Current User #}
                    <div class="alert alert-info text-center">
                        <i class="fa fa-user"></i>
                        Logged in as <strong>{{ user.email }}</strong>
                    </div>

                    {# Flash Messages #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            <i class="fa fa-check-circle"></i> {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle"></i> {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('warning') %}
                        <div class="alert alert-warning">
                            <i class="fa fa-warning"></i> {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('info') %}
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i> {{ message }}
                        </div>
                    {% endfor %}

                    <div class="alert alert-info">
                        <strong><i class="fa fa-star"></i> About Student+:</strong><br>
                        Student+ members get access to advanced tools, priority support,
                        and premium learning resources.
                    </div>

                    <form method="POST" action="{{ path('app_request_student_plus') }}">

                        <div class="form-group">
                            <label for="motivation">
                                Why do you want Student+?
                                <small class="text-muted">(Minimum 50 characters)</small>
                            </label>

                            <textarea
                                name="motivation"
                                id="motivation"
                                class="form-control"
                                rows="6"
                                required
                                placeholder="Explain how Student+ will help you, how you will use the features, and how you will contribute..."
                            ></textarea>

                            <small class="text-muted">
                                <span id="charCount">0</span> / 50 characters minimum
                            </small>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="main-button icon-button">
                                <i class="fa fa-paper-plane"></i> Submit Request
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Form Section -->

<!-- Footer -->
<footer id="footer" class="section">
    <div class="container text-center">
        <div class="footer-logo">
            <a class="logo" href="{{ path('app_home') }}">
                <img src="{{ asset('user/img/logo.png') }}" alt="logo">
            </a>
        </div>
        <p>&copy; 2026 All Rights Reserved</p>
    </div>
</footer>
<!-- /Footer -->

<script>
document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.getElementById('motivation');
    const charCount = document.getElementById('charCount');

    textarea.addEventListener('input', function() {
        const length = this.value.length;
        charCount.textContent = length;

        if (length < 50) {
            charCount.style.color = 'red';
        } else {
            charCount.style.color = 'green';
        }
    });
});
</script>
{% endblock %}
