{% extends 'workspace/module_base.html.twig' %}

{% block title %}Gamification{% endblock %}

{% block module_title %}Gamification Dashboard{% endblock %}
{% block module_subtitle %}Track XP, levels, and unlocked badges.{% endblock %}
{% block module_content %}
<div class="container" style="margin-top: 30px; margin-bottom: 40px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Gamification Dashboard</h2>
            <p class="text-muted">Track your XP, level, and unlocked badges.</p>
        </div>
    </div>

    <div class="row" style="margin-top: 20px;">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <h4>Total XP</h4>
                    <h2 style="margin: 0;">{{ stats.totalXp }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <h4>Current Level</h4>
                    <h2 style="margin: 0;">{{ stats.currentLevel }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <h4>Tasks Completed</h4>
                    <h2 style="margin: 0;">{{ stats.tasksCompleted }}</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Unlocked Badges</strong></div>
                <div class="panel-body">
                    {% if badges is empty %}
                        <p class="text-muted" style="margin: 0;">No badges unlocked yet. Complete tasks to start earning rewards.</p>
                    {% else %}
                        <div class="row">
                            {% for userBadge in badges %}
                                <div class="col-sm-6 col-md-4" style="margin-bottom: 16px;">
                                    <div class="well" style="margin: 0;">
                                        <div style="font-weight: 600;">{{ userBadge.badge.name }}</div>
                                        <div class="text-muted">{{ userBadge.badge.description }}</div>
                                        <small class="text-muted">Earned: {{ userBadge.earnedAt|date('Y-m-d H:i') }}</small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
