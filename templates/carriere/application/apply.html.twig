{% extends 'base.html.twig' %}

{% block title %}Apply to {{ opportunity.title }}{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Apply to: {{ opportunity.title }}</h3>
                    <p class="text-muted" style="margin: 5px 0 0 0;">
                        {% if opportunity.company %}{{ opportunity.company.name }}{% endif %}
                    </p>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i> You are applying as: <strong>{{ app.user.userIdentifier }}</strong>
                    </div>

                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.coverLetter) }}
                            {{ form_widget(form.coverLetter) }}
                            {{ form_errors(form.coverLetter) }}
                            <p class="help-block">{{ form.coverLetter.vars.help }}</p>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="main-button">
                                <i class="fa fa-send"></i> Submit Application
                            </button>
                            <a href="{{ path('app_carriere_opportunity_show', {id: opportunity.id}) }}" class="btn btn-default">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Opportunity Summary -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 style="margin: 0;">Opportunity Summary</h4>
                </div>
                <div class="panel-body">
                    <p><strong>Type:</strong> {{ opportunity.type|capitalize }}</p>
                    {% if opportunity.location %}
                        <p><strong>Location:</strong> {{ opportunity.location }}</p>
                    {% endif %}
                    {% if opportunity.duration %}
                        <p><strong>Duration:</strong> {{ opportunity.duration }}</p>
                    {% endif %}
                    {% if opportunity.deadline %}
                        <p><strong>Deadline:</strong> {{ opportunity.deadline|date('M d, Y') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
