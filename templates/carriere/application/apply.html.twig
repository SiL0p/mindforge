{% extends 'workspace/module_base.html.twig' %}

{% block title %}Apply - {{ opportunity.title }}{% endblock %}

{% block hero %}
<div class="hero-area section">
	<div class="bg-image bg-parallax overlay" style="background-image:url({{ asset('user/img/page-background.jpg') }})"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 text-center">
				<ul class="hero-area-tree">
					<li><a href="{{ path('app_home') }}">Home</a></li>
					<li><a href="{{ path('app_carriere_opportunity_index') }}">Careers</a></li>
					<li>Apply</li>
				</ul>
				<h1 class="white-text">Apply Now</h1>
				<p class="white-text lead">Applying to {{ opportunity.title }}</p>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block module_content %}
<div class="section">
	<div class="container">
		<div class="row">

			<!-- Application Form -->
			<div class="col-md-8">
				<div class="contact-form">
					<h3 style="margin-bottom: 20px;">Submit Your Application</h3>

					<div class="alert alert-info">
						<i class="fa fa-info-circle"></i> You are applying as: <strong>{{ app.user.userIdentifier }}</strong>
					</div>

					{{ form_start(form) }}
						<div class="form-group">
							{{ form_label(form.coverLetter) }}
							{{ form_widget(form.coverLetter, {'attr': {'class': 'input', 'rows': 10}}) }}
							{{ form_errors(form.coverLetter) }}
							<p class="help-block">{{ form.coverLetter.vars.help }}</p>
						</div>

						<div class="form-group" style="margin-top: 20px;">
							<button type="submit" class="main-button icon-button">
								<i class="fa fa-send"></i> Submit Application
							</button>
							<a href="{{ path('app_carriere_opportunity_show', {id: opportunity.id}) }}" style="color: #6C3BAA; margin-left: 15px;">Cancel</a>
						</div>
					{{ form_end(form) }}
				</div>
			</div>

			<!-- Sidebar - Opportunity Summary -->
			<div class="col-md-4">
				<div class="widget">
					<h4 class="widget-title">Opportunity Summary</h4>
					<h5><strong>{{ opportunity.title }}</strong></h5>
					{% if opportunity.company %}
						<p><i class="fa fa-building"></i> {{ opportunity.company.name }}</p>
					{% endif %}
					<ul class="list-unstyled" style="line-height: 2.2;">
						<li><strong>Type:</strong> {{ opportunity.type|capitalize }}</li>
						{% if opportunity.location %}
							<li><strong>Location:</strong> {{ opportunity.location }}</li>
						{% endif %}
						{% if opportunity.duration %}
							<li><strong>Duration:</strong> {{ opportunity.duration }}</li>
						{% endif %}
						{% if opportunity.deadline %}
							<li><strong>Deadline:</strong> {{ opportunity.deadline|date('M d, Y') }}</li>
						{% endif %}
					</ul>
				</div>
			</div>

		</div>
	</div>
</div>
{% endblock %}
