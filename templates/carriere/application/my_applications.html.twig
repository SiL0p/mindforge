{% extends 'base.html.twig' %}

{% block title %}My Applications{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-12">
            <h2>My Applications</h2>
            <p class="text-muted">Track your job applications and their status</p>

            {% if applications|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Applied Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for application in applications %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_carriere_opportunity_show', {id: application.opportunity.id}) }}">
                                        {{ application.opportunity.title }}
                                    </a>
                                </td>
                                <td>
                                    {% if application.opportunity.company %}
                                        {{ application.opportunity.company.name }}
                                    {% else %}
                                        <em>Not specified</em>
                                    {% endif %}
                                </td>
                                <td>{{ application.appliedAt|date('M d, Y') }}</td>
                                <td>
                                    {% if application.status == 'pending' %}
                                        <span class="label label-warning">Pending</span>
                                    {% elseif application.status == 'accepted' %}
                                        <span class="label label-success">Accepted</span>
                                    {% elseif application.status == 'rejected' %}
                                        <span class="label label-danger">Rejected</span>
                                    {% elseif application.status == 'withdrawn' %}
                                        <span class="label label-default">Withdrawn</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_carriere_application_show', {id: application.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="fa fa-eye"></i> View
                                    </a>
                                    {% if application.isPending %}
                                        <form method="post" action="{{ path('app_carriere_application_withdraw', {id: application.id}) }}"
                                              style="display: inline;" onsubmit="return confirm('Are you sure you want to withdraw this application?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('withdraw' ~ application.id) }}">
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                <i class="fa fa-times"></i> Withdraw
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <p>You haven't applied to any opportunities yet.</p>
                        <a href="{{ path('app_carriere_opportunity_index') }}" class="main-button">
                            Browse Opportunities
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
