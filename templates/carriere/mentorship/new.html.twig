{% extends 'base.html.twig' %}

{% block title %}Request Mentorship - MindForge{% endblock %}

{% block hero %}
<div class="hero-area section">
	<div class="bg-image bg-parallax overlay" style="background-image:url({{ asset('user/img/page-background.jpg') }})"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 text-center">
				<ul class="hero-area-tree">
					<li><a href="{{ path('app_home') }}">Home</a></li>
					<li><a href="{{ path('app_carriere_mentorship_index') }}">Mentorships</a></li>
					<li>Request</li>
				</ul>
				<h1 class="white-text">Request Mentorship</h1>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block content %}
<div class="section">
	<div class="container">
		<div class="row">

			<!-- Mentorship Request Form -->
			<div class="col-md-8">
				<div class="contact-form">
					<h3 style="margin-bottom: 20px;">Submit Your Mentorship Request</h3>

					<div class="alert alert-info">
						<i class="fa fa-info-circle"></i> You are requesting as: <strong>{{ app.user.userIdentifier }}</strong>
					</div>

					{{ form_start(form) }}
						<div class="form-group">
							{{ form_label(form.mentor) }}
							{{ form_widget(form.mentor, {'attr': {'class': 'input'}}) }}
							{{ form_errors(form.mentor) }}
						</div>

						<div class="form-group">
							{{ form_label(form.company) }}
							{{ form_widget(form.company, {'attr': {'class': 'input'}}) }}
							{{ form_errors(form.company) }}
						</div>

						<div class="form-group" style="margin-top: 20px;">
							<button type="submit" class="main-button icon-button">
								<i class="fa fa-send"></i> Submit Request
							</button>
							<a href="{{ path('app_carriere_mentorship_index') }}" style="color: #6C3BAA; margin-left: 15px;">Cancel</a>
						</div>
					{{ form_end(form) }}
				</div>
			</div>

			<!-- Sidebar - About Mentorships -->
			<div class="col-md-4">
				<div class="widget">
					<h4 class="widget-title">About Mentorships</h4>
					<p>Connect with experienced professionals who can guide you in your career journey.</p>
					<ul class="list-unstyled" style="line-height: 2.2;">
						<li><i class="fa fa-check"></i> Get career guidance</li>
						<li><i class="fa fa-check"></i> Learn industry insights</li>
						<li><i class="fa fa-check"></i> Build professional network</li>
						<li><i class="fa fa-check"></i> Receive personalized advice</li>
					</ul>
					<hr>
					<p class="text-muted" style="font-size: 12px;">
						<i class="fa fa-info-circle"></i> Once submitted, your request will be sent to the mentor. They can accept or decline based on their availability.
					</p>
				</div>
			</div>

		</div>
	</div>
</div>
{% endblock %}
