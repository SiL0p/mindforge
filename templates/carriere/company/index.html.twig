{% extends 'base.html.twig' %}

{% block title %}Companies{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Companies</h2>
            <p class="text-muted">Explore companies posting career opportunities</p>

            {% if is_granted('ROLE_COMPANY') %}
            <div style="margin-bottom: 20px;">
                <a href="{{ path('app_carriere_company_new') }}" class="main-button">
                    <i class="fa fa-plus"></i> Create Company Profile
                </a>
            </div>
            {% endif %}

            {% if companies|length > 0 %}
                <div class="row">
                    {% for company in companies %}
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h4>{{ company.name }}</h4>
                                {% if company.industry %}
                                    <p class="text-muted"><i class="fa fa-industry"></i> {{ company.industry }}</p>
                                {% endif %}
                                {% if company.description %}
                                    <p>{{ company.description|length > 100 ? company.description|slice(0, 100) ~ '...' : company.description }}</p>
                                {% endif %}
                                <a href="{{ path('app_carriere_company_show', {id: company.id}) }}" class="main-button btn-sm">
                                    View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <p>No companies registered yet.</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
