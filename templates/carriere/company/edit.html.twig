{% extends 'base.html.twig' %}

{% block title %}Edit {{ company.name }}{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Edit Company Profile</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.industry) }}
                            {{ form_widget(form.industry) }}
                            {{ form_errors(form.industry) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.contactEmail) }}
                                    {{ form_widget(form.contactEmail) }}
                                    {{ form_errors(form.contactEmail) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.contactPhone) }}
                                    {{ form_widget(form.contactPhone) }}
                                    {{ form_errors(form.contactPhone) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.website) }}
                            {{ form_widget(form.website) }}
                            {{ form_errors(form.website) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="main-button">
                                <i class="fa fa-save"></i> Save Changes
                            </button>
                            <a href="{{ path('app_carriere_company_show', {id: company.id}) }}" class="btn btn-default">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
