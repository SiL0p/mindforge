{% extends 'base.html.twig' %}

{% block title %}Create Company Profile{% endblock %}

{% block hero %}
<div class="hero-area section">
	<div class="bg-image bg-parallax overlay" style="background-image:url({{ asset('user/img/page-background.jpg') }})"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 text-center">
				<ul class="hero-area-tree">
					<li><a href="{{ path('app_home') }}">Home</a></li>
					<li><a href="{{ path('app_carriere_company_index') }}">Companies</a></li>
					<li>Create</li>
				</ul>
				<h1 class="white-text">Create Company Profile</h1>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
	.form-error {
		color: #d9534f;
		font-size: 13px;
		margin-top: 5px;
		display: block;
		font-weight: bold;
	}
	.form-group.has-error .input {
		border-color: #d9534f !important;
	}
	.alert-form-errors {
		background-color: #f2dede;
		border: 1px solid #ebccd1;
		color: #a94442;
		padding: 15px;
		margin-bottom: 20px;
		border-radius: 4px;
	}
	.form-errors {
		color: #d9534f;
		margin-top: 5px;
	}
	.form-errors ul {
		list-style: none;
		padding: 0;
		margin: 5px 0 0 0;
	}
	.form-errors li {
		padding: 3px 0;
	}
</style>
{% endblock %}

{% block content %}
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="contact-form">
					<h3 style="margin-bottom: 30px;">Company Information</h3>

					{{ form_start(form) }}
						{% if not form.vars.valid %}
							<div class="alert-form-errors">
								<strong><i class="fa fa-exclamation-triangle"></i> Please fix the following errors:</strong>
								{{ form_errors(form) }}
							</div>
						{% endif %}

						<div class="form-group {{ form.name.vars.errors|length > 0 ? 'has-error' : '' }}">
							{{ form_label(form.name) }}
							{{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
							<div class="form-errors">{{ form_errors(form.name) }}</div>
						</div>

						<div class="form-group {{ form.description.vars.errors|length > 0 ? 'has-error' : '' }}">
							{{ form_label(form.description) }}
							{{ form_widget(form.description, {'attr': {'class': 'input'}}) }}
							<div class="form-errors">{{ form_errors(form.description) }}</div>
						</div>

						<div class="form-group {{ form.industry.vars.errors|length > 0 ? 'has-error' : '' }}">
							{{ form_label(form.industry) }}
							{{ form_widget(form.industry, {'attr': {'class': 'input'}}) }}
							<div class="form-errors">{{ form_errors(form.industry) }}</div>
						</div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group {{ form.contactEmail.vars.errors|length > 0 ? 'has-error' : '' }}">
									{{ form_label(form.contactEmail) }}
									{{ form_widget(form.contactEmail, {'attr': {'class': 'input'}}) }}
									<div class="form-errors">{{ form_errors(form.contactEmail) }}</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group {{ form.contactPhone.vars.errors|length > 0 ? 'has-error' : '' }}">
									{{ form_label(form.contactPhone) }}
									{{ form_widget(form.contactPhone, {'attr': {'class': 'input'}}) }}
									<div class="form-errors">{{ form_errors(form.contactPhone) }}</div>
								</div>
							</div>
						</div>

						<div class="form-group {{ form.website.vars.errors|length > 0 ? 'has-error' : '' }}">
							{{ form_label(form.website) }}
							{{ form_widget(form.website, {'attr': {'class': 'input'}}) }}
							<div class="form-errors">{{ form_errors(form.website) }}</div>
						</div>

						<div class="form-group" style="margin-top: 20px;">
							<button type="submit" class="main-button icon-button">
								<i class="fa fa-save"></i> Create Profile
							</button>
							<a href="{{ path('app_carriere_company_index') }}" style="color: #6C3BAA; margin-left: 15px;">Cancel</a>
						</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
