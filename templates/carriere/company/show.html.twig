{% extends 'base.html.twig' %}

{% block title %}{{ company.name }}{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>{{ company.name }}</h2>
                    {% if company.industry %}
                        <p class="text-muted"><i class="fa fa-industry"></i> {{ company.industry }}</p>
                    {% endif %}

                    {% if company.website %}
                        <p><a href="{{ company.website }}" target="_blank"><i class="fa fa-external-link"></i> Visit Website</a></p>
                    {% endif %}

                    {% if company.contactEmail or company.contactPhone %}
                        <p>
                            {% if company.contactEmail %}
                                <i class="fa fa-envelope"></i> {{ company.contactEmail }}
                            {% endif %}
                            {% if company.contactPhone %}
                                <i class="fa fa-phone"></i> {{ company.contactPhone }}
                            {% endif %}
                        </p>
                    {% endif %}

                    <hr>

                    {% if company.description %}
                        <h4>About Us</h4>
                        <p style="white-space: pre-line;">{{ company.description }}</p>
                        <hr>
                    {% endif %}

                    {% if is_granted('ROLE_COMPANY') %}
                        <div style="margin-bottom: 20px;">
                            <a href="{{ path('app_carriere_company_edit', {id: company.id}) }}" class="btn btn-warning">
                                <i class="fa fa-edit"></i> Edit Profile
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <h3>Posted Opportunities ({{ opportunities|length }})</h3>
            {% if opportunities|length > 0 %}
                {% for opportunity in opportunities %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>
                            <a href="{{ path('app_carriere_opportunity_show', {id: opportunity.id}) }}">
                                {{ opportunity.title }}
                            </a>
                        </h4>
                        <p>
                            <span class="label label-primary">{{ opportunity.type|capitalize }}</span>
                            {% if opportunity.location %}
                                <span class="label label-default"><i class="fa fa-map-marker"></i> {{ opportunity.location }}</span>
                            {% endif %}
                            {% if opportunity.duration %}
                                <span class="label label-info">{{ opportunity.duration }}</span>
                            {% endif %}
                        </p>
                        <p class="text-muted">
                            {{ opportunity.description|length > 150 ? opportunity.description|slice(0, 150) ~ '...' : opportunity.description }}
                        </p>
                        <a href="{{ path('app_carriere_opportunity_show', {id: opportunity.id}) }}" class="btn btn-primary btn-sm">
                            View Details
                        </a>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <p>This company has not posted any opportunities yet.</p>
                    </div>
                </div>
            {% endif %}

            <div style="margin-top: 20px;">
                <a href="{{ path('app_carriere_company_index') }}" class="btn btn-default">
                    <i class="fa fa-arrow-left"></i> Back to Companies
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
