{% extends 'base.html.twig' %}

{% block title %}{{ opportunity.title }}{% endblock %}

{% block body %}
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>{{ opportunity.title }}</h2>
                    <p style="margin-bottom: 20px;">
                        {% if opportunity.company %}
                            <strong>{{ opportunity.company.name }}</strong>
                            {% if opportunity.company.industry %}
                                | {{ opportunity.company.industry }}
                            {% endif %}
                        {% endif %}
                    </p>

                    <div style="margin-bottom: 20px;">
                        <span class="label label-primary">{{ opportunity.type|capitalize }}</span>
                        {% if opportunity.location %}
                            <span class="label label-default"><i class="fa fa-map-marker"></i> {{ opportunity.location }}</span>
                        {% endif %}
                        {% if opportunity.duration %}
                            <span class="label label-info">{{ opportunity.duration }}</span>
                        {% endif %}
                        {% if opportunity.deadline %}
                            <span class="label {% if opportunity.isDeadlinePassed %}label-danger{% else %}label-warning{% endif %}">
                                Deadline: {{ opportunity.deadline|date('M d, Y') }}
                            </span>
                        {% endif %}
                    </div>

                    <hr>

                    <h4>Job Description</h4>
                    <p style="white-space: pre-line;">{{ opportunity.description }}</p>

                    <hr>

                    {% if is_granted('ROLE_USER') and not is_granted('ROLE_COMPANY') %}
                        {% if hasApplied %}
                            <div class="alert alert-info">
                                <i class="fa fa-check-circle"></i> You have already applied to this opportunity.
                                <a href="{{ path('app_carriere_application_my_applications') }}">View My Applications</a>
                            </div>
                        {% elseif opportunity.isDeadlinePassed %}
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle"></i> The application deadline has passed.
                            </div>
                        {% elseif not opportunity.isActive %}
                            <div class="alert alert-warning">
                                <i class="fa fa-exclamation-triangle"></i> This opportunity is no longer active.
                            </div>
                        {% else %}
                            <a href="{{ path('app_carriere_application_apply', {id: opportunity.id}) }}"
                               class="main-button btn-lg">
                                <i class="fa fa-send"></i> Apply Now
                            </a>
                        {% endif %}
                    {% elseif not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="alert alert-info">
                            Please <a href="{{ path('app_login') }}">login</a> to apply to this opportunity.
                        </div>
                    {% endif %}

                    {% if is_granted('ROLE_COMPANY') %}
                        <div style="margin-top: 20px;">
                            <a href="{{ path('app_carriere_opportunity_edit', {id: opportunity.id}) }}"
                               class="btn btn-warning">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_carriere_opportunity_delete', {id: opportunity.id}) }}"
                                  style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this opportunity?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ opportunity.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            {% if opportunity.company %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 style="margin: 0;">About the Company</h4>
                </div>
                <div class="panel-body">
                    <h5><strong>{{ opportunity.company.name }}</strong></h5>
                    {% if opportunity.company.industry %}
                        <p><i class="fa fa-industry"></i> {{ opportunity.company.industry }}</p>
                    {% endif %}
                    {% if opportunity.company.description %}
                        <p>{{ opportunity.company.description|length > 150 ? opportunity.company.description|slice(0, 150) ~ '...' : opportunity.company.description }}</p>
                    {% endif %}
                    {% if opportunity.company.website %}
                        <p><a href="{{ opportunity.company.website }}" target="_blank"><i class="fa fa-external-link"></i> Visit Website</a></p>
                    {% endif %}
                    <a href="{{ path('app_carriere_company_show', {id: opportunity.company.id}) }}">
                        View Company Profile
                    </a>
                </div>
            </div>
            {% endif %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 style="margin: 0;">Opportunity Details</h4>
                </div>
                <div class="panel-body">
                    <p><strong>Type:</strong> {{ opportunity.type|capitalize }}</p>
                    {% if opportunity.location %}
                        <p><strong>Location:</strong> {{ opportunity.location }}</p>
                    {% endif %}
                    {% if opportunity.duration %}
                        <p><strong>Duration:</strong> {{ opportunity.duration }}</p>
                    {% endif %}
                    {% if opportunity.deadline %}
                        <p><strong>Deadline:</strong> {{ opportunity.deadline|date('M d, Y') }}</p>
                    {% endif %}
                    <p><strong>Posted:</strong> {{ opportunity.createdAt|date('M d, Y') }}</p>
                    <p><strong>Applications:</strong> {{ opportunity.applicationCount }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
            <a href="{{ path('app_carriere_opportunity_index') }}" class="btn btn-default">
                <i class="fa fa-arrow-left"></i> Back to Opportunities
            </a>
        </div>
    </div>
</div>
{% endblock %}
